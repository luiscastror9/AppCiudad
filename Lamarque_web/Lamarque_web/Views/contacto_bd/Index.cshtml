@model IEnumerable<Lamarque_web.Models.contacto_bd>

@{
    ViewBag.Title = "Mensajes";
}

<h2>Mensajes</h2>

@using (Html.BeginForm("Buscar", "contacto_bd", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
{
    <form class="navbar-form navbar-left">

        <div class="input-group">

            <div class="form-group">
                <input name="busqueda_contacto" type="text" class="form-control" placeholder="Buscar...">
            </div>
            <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>

        </div>
    </form>
}

<div class="content col-md-8">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Nombre")
            </th>
            <th>
                @Html.DisplayName("Asunto")
            </th>
            <th>
                @Html.DisplayName("Fecha")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.asunto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.ActionLink("Ver +", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

        @Html.ActionLink("Volver arriba", "Index")
        <br /><br />
        @Html.ActionLink("Panel de control", "Panel", "Administracion")
</div>
