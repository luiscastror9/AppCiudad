@model IEnumerable<Lamarque_web.Models.telefonos_bd>

@{
    ViewBag.Title = "Telefonos";
}

<h2><i class="glyphicon glyphicon-phone-alt"></i> Telefonos utiles</h2>

<div class="content col-md-4">
    <table class="table table-striped">
        <tr class="warning">
            <th>
                @Html.DisplayName("Nombre")
            </th>
            <th>
                @Html.DisplayName("Telefono")
            </th>
            <td></td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Ver +", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    @Html.ActionLink("Panel de control", "Panel", "Administracion")
</div>