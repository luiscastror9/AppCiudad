@model IEnumerable<Lamarque_web.Models.AspNetUsers>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Listado de usuarios</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<div class="content col-md-8">
    <table class="table ">
        <tr>
            <th>
                @Html.DisplayName("Usuario")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <td></td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Ver +", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    @Html.ActionLink("Volver arriba", "Index")
    <br />
    @Html.ActionLink("Panel de control", "Panel", "Administracion")
</div>

