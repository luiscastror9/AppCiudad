@using Microsoft.AspNet.Identity
<style>
    .der{
        margin-right: 20px;
    }
</style>
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right der">
        <li><a href="~/Home/Panel">Panel de control</a></li>
        <li>
            @Html.ActionLink("Perfil", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Salir</a></li>

    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right der">
        <li>@Html.ActionLink("Usuarios", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <!--<li>Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>-->
    </ul>
}