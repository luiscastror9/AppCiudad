<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lamarque - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/estilo.css")
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-inverse col-md-8 col-md-offset-2">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="logo" href="~/Home/Index">Lamarque</a>
            </div>
            <ul class="nav navbar-nav">
                <li>  -  </li>
                <li><a href="~/Home/Historia">Historia</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Turismo
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/eventos_bd/Index">Eventos</a></li>
                        <li><a href="~/servicios_bd/Index">Servicios</a></li>
                        <li><a href="~/mapa_bd/Index">Mapa</a></li>
                    </ul>
                </li>
                <li><a href="~/contacto_bd/Create">Contacto</a></li>
                <li>
                    <form class="navbar-form navbar-left">
                        <div class="input-group">
                            @using (Html.BeginForm("Buscar", "Home", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
                            {
                                <div class="form-group">
                                    <input name="busqueda_txt" type="text" class="form-control" placeholder="Buscar...">
                                </div>
                                <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            }
                        </div>
                    </form>
                </li>
                <li>@Html.Partial("_LoginPartial")</li>
            </ul>
        </div>
    </nav>
    <div class="body-content col-md-8 col-md-offset-2">
            <br />
            @RenderBody()
    </div>  
    <footer>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
