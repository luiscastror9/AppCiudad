<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lamarque - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <style>
        .busca {
            float: right;
        }

        body {
            font-family: 'Raleway', sans-serif;
            background-image: linear-gradient(to top, #d5d4d0 0%, #d5d4d0 1%, #eeeeec 31%, #efeeec 75%, #e9e9e7 100%);
            background-attachment: fixed;
        }

        a {
            color: #000000;
            text-decoration: none;
        }

            a:hover {
                color: #000000;
                text-decoration: none;
            }

        .nav-transparente {
            opacity: 0.9;
            -webkit-box-shadow: 0px 7px 5px -1px rgba(0,0,0,0.12);
            -moz-box-shadow: 0px 7px 5px -1px rgba(0,0,0,0.12);
            box-shadow: 0px 7px 5px -1px rgba(0,0,0,0.12);
            border-radius: 0%;
            justify-content: center;
            background: #424242;
            border-color: #000000;
        }

        .titulo {
            font-family: 'Raleway', sans-serif;
        }

        .caja-servicios {
            background-image: url(/Content/Imagenes/fondo-servicios.jpg);
            color: #ffffff;
            font-size: 1em;
            padding: 5px;
        }
            .caja-servicios h1 {
                margin-left: 20px;
            }

        .caja-mapa {
            background-image: url(/Content/Imagenes/fondo-mapa.jpg);
            color: #ffffff;
            font-size: 1em;
            padding: 5px;
        }
            .caja-mapa h1 {
                margin-left: 20px;
            }

        .fondo-historia {
            background-image: url(/Content/Imagenes/fondo-historia.jpeg);
            color: #ffffff;
            font-size: 1em;
            padding: 5px;
        }
            .fondo-historia h1 {
                margin-left: 20px;
            }

        .fondo-museo {
            background-image: url(/Content/Imagenes/fondo-museo.png);
            color: #ffffff;
            font-size: 1em;
            padding: 5px;
        }

            .fondo-museo h1 {
                margin-left: 20px;
            }

        .fondo-contacto {
            background-image: url(/Content/Imagenes/fondo-contacto.jpeg);
            color: #ffffff;
            font-size: 1em;
            padding: 5px;
        }

            .fondo-contacto h1 {
                margin-left: 20px;
            }

        .fondo-eventos {
            background-image: url(/Content/Imagenes/fondo-eventos.jpg);
            color: #ffffff;
            font-size: 1em;
            padding: 5px;
        }

            .fondo-eventos h1 {
                margin-left: 20px;
            }

        .fondo-inicio {
            background-image: url(/Content/Imagenes/fondo-inicio.jpg);
            color: #ffffff;
            font-size: 1em;
            padding: 5px;
        }

            .fondo-inicio h1 {
                margin-left: 20px;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-link nav-transparente navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Lamarque", "Index", "Home")</li>
                    <li>@Html.ActionLink("Historia", "Historia", "Home")</li>
                    <li>@Html.ActionLink("Eventos", "Index", "eventos_bd")</li>
                    <li>@Html.ActionLink("Servicios", "Index", "servicios_bd")</li>
                    <li>@Html.ActionLink("Mapa", "Index", "mapa_bd")</li>
                    <li>@Html.ActionLink("Contacto", "Create", "contacto_bd")</li>
                </ul>
                <div class="busca">
                    @using (Html.BeginForm("Buscar", "Home", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
                    {
                        <div class="form-group">
                            <input name="busqueda_txt" type="text" class="form-control" placeholder="Buscar">
                        </div>

                        <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    }

                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @RenderBody()
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/locationpicker.jquery.js")
    @RenderSection("scripts", required: false)
</body>
</html>
