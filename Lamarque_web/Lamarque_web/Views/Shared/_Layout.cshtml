<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lamarque - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/estilo.css")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid col-md-8 col-md-offset-2">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p class="logo">Lamarque</p>
            </div>
            <ul class="nav navbar-nav">
                <li>  -  </li>
                <li><a href="~/Home/Index">Inicio</a></li>
                <li><a href="~/Home/Historia">La ciudad</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Turismo
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/eventos_bd/Index">Calendario</a></li>
                        <li><a href="~/servicios_bd/Index">Servicios</a></li>
                        <li><a href="~/Home/Mapa">Mapa</a></li>
                    </ul>
                </li>
                <li><a href="~/contacto_bd/Create">Contacto</a></li>
                <li>
                    @using (Html.BeginForm("Buscar", "Home", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
                    {
                        <form class="navbar-form navbar-left">

                            <div class="input-group">

                                <div class="form-group">
                                    <input name="busqueda_txt" type="text" class="form-control" placeholder="Buscar...">
                                </div>
                                <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>

                            </div>
                        </form>
                    }
                </li>
            </ul>
            <ul class="usuarios">
                <li>@Html.Partial("_LoginPartial")</li>
            </ul>
        </div>
    </nav>
    <div class="body-content col-md-8 col-md-offset-2">
        <br />
        @RenderBody()
        <br /><br /><br />
    </div>
    <footer>
        <div >
            <div class="izquierda">
                <table>
                    <tr>
                        <td class="logo-pie">Lamarque</td>
                    </tr>
                    <tr>
                        <td>
                            <ul class="telefonos">
                                <li><i class="glyphicon glyphicon-map-marker"></i> Provincia: Río Negro</li>
                                <li><i class="glyphicon glyphicon-map-marker"></i> Departamento: Avellaneda</li>
                            </ul>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="Centro">

            </div>

            <div class='derecha'>
                <table>
                    <tr>
                        <td><h4>Telefonos utiles:</h4></td>
                    </tr>
                    <tr>
                        <td>
                            <ul class="telefonos">
                                <li><i class="glyphicon glyphicon-earphone"></i> 107 | Hospital</li>
                                <li><i class="glyphicon glyphicon-earphone"></i> 101 | Policía</li>
                                <li><i class="glyphicon glyphicon-earphone"></i> 100 | Bomberos Voluntarios</li>
                            </ul>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
