<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lamarque - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/estilo.css")
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">

</head>
<body>
        <!--
            Navbar-link es para el hover blanco.
            Navbar-default es para las letras blancas.
            -->
        <div class="navbar navbar-default nav-transparente col-md-8 col-md-offset-2" style="border:none;" role="navigation">
            <div class="container">
                <!--Esto es para el responsive-->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <!---->

                        <ul class="nav navbar-nav">
                            <!--Aca va el logo-->
                            <li><a id="logo">Lamarque</a></li>
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Historia", "Historia", "Home")</li>
                            <li>@Html.ActionLink("Eventos", "Index", "eventos_bd")</li>
                            <li>@Html.ActionLink("Servicios", "Index", "servicios_bd")</li>
                            <li>@Html.ActionLink("Mapa", "Index", "mapa_bd")</li>
                            <li>@Html.ActionLink("Contacto", "Create", "contacto_bd")</li>
                            <li>@using (Html.BeginForm("Buscar", "Home", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
                            {
                                <div class="form-group">
                                    <input name="busqueda_txt" type="text" class="form-control" placeholder="Buscar...">
                                </div>
                                <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            }</li>
                            <li>@Html.Partial("_LoginPartial")</li>
                        </ul>

                </div>
            </div>
        </div>

    <div class="body-content col-md-8 col-md-offset-2">
            <br />
            @RenderBody()
    </div>
        
    <nav class="navbar navbar-inverse navbar-fixed-bottom col-md-8 col-md-offset-2" style="border:none; height:10px; ">
        <div class="container-fluid">
            <div class="navbar-header">
                
            </div>
        </div>
    </nav>
        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
