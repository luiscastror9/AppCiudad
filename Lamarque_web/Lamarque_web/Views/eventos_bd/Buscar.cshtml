@model Lamarque_web.Models.resultado_eventos
@{
    ViewBag.Title = "Resultados de busqueda";
}

<h1 class="titulo">Resultados de busqueda</h1>
<br />
<br />

@using (Html.BeginForm("Buscar", "eventos_bd", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
{
    <form class="navbar-form navbar-left">

        <div class="input-group">

            <div class="form-group">
                <input name="busqueda_eventos" type="text" class="form-control" placeholder="Buscar...">
            </div>
            <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>

        </div>
    </form>
}

@if (Model.eventos.Count == 0)
{
    <h4 class="titulo">No hay resultados disponibles...</h4>
}
else
{
    <table class="table table-bordered">
        <tr class="active">
            <th>
                @Html.DisplayName("Descripcion")
            </th>
            <th>
                @Html.DisplayName("Empieza")
            </th>
            <th>
                @Html.DisplayName("Termina")
            </th>
        </tr>
        @foreach (var itemevento in Model.eventos)
        {
            <tr>
                <td>
                    @itemevento.descripcion
                </td>
                <td>
                    @itemevento.startDate
                </td>
                <td>
                    @itemevento.endDate
                </td>
            </tr>
        }
    </table>
}

<br /><br />
