@model IEnumerable<Net.Models.Servicios>

@{
    ViewBag.Title = "Servicios";
}

<div class="form-control">
<a class="btn btn-outline-info" href="#" role="button">Agregar</a>
@using (Html.BeginForm("Buscar", "servicios_bd", FormMethod.Post, htmlAttributes: new { @class = "form-inline my-2 my-lg-0 float-right" }))
{
    <form class="form-inline my-2 my-lg-0 float-right">
        <input class="form-control mr-sm-2" name="busqueda_servicios" type="text" placeholder="Buscar">
        <button id="busqueda" class="btn btn-outline-info my-2 my-sm-0" type="submit">Buscar</button>
    </form>
}
</div>

<table class="table table-hover table-bordered">
    <tr class="table-info">
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td class="text-dark">
                <a href="~/Views/Servicios/Edit.cshtml" class="text-dark">Modificar |</a>
                <a href="~/Views/Servicios/Details.cshtml" class="text-dark">Ver |</a>
                <a href="~/Views/Servicios/Delete.cshtml" class="text-dark">Eliminar</a>
            </td>
        </tr>
    }

</table>

<a href="~/Servicios/Index" class="float-right">Subir</a>
