@model Net.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}

<div class="alert alert-danger mb-3" role="alert">
    <h3 class="text-center">Cambiar la contraseña</h3>
</div>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control mx-auto d-block", @placeholder = "Contraseña actual" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control mx-auto d-block", @placeholder = "Nueva contraseña " })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mx-auto d-block", @placeholder = "Confirmar contraseña" })
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="submit" value="Cambiar" class="btn btn-outline-info mx-auto d-block float-right" />
        </div>
        <div class="form-group col-md-6">
            <a class="btn btn-outline-danger" href="~/Manage/Index" role="button">Cancelar</a>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}