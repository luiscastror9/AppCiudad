@model Net.Controllers.RoleViewModel

@{
    ViewBag.Title = "Nuevo Rol";
}

<div class="alert alert-info mb-3" role="alert">
    <h3 class="text-center">Nuevo rol</h3>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mx-auto d-block", @placeholder = "Rol" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <input type="submit" value="Enviar" class="btn btn-outline-info mx-auto d-block float-right" />
            </div>
            <div class="form-group col-md-6">
                <a class="btn btn-outline-danger" href="~/Manage/Roles" role="button">Cancelar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

