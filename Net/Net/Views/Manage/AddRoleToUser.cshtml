
@{
    ViewBag.Title = "Asignar rol";
    
}

<div class="alert alert-success mb-3" role="alert">
    <h3 class="text-center">Asignar rol</h3>
</div>

<div class="mb-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Editor("user", new { htmlAttributes = new { @class = "form-control mx-auto d-block", @placeholder = "Correo electrónico" } })
            </div>
            <div class="form-group">
                @Html.Editor("role", new { htmlAttributes = new { @class = "form-control mx-auto d-block", @placeholder = "Rol" } })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <input type="submit" value="Asignar" class="btn btn-outline-success mx-auto d-block float-right" />
            </div>
            <div class="form-group col-md-6">
                <a class="btn btn-outline-info" href="~/Home/Administracion" role="button">Cancelar</a>
                <a class="btn btn-danger float-right" href="~/Manage/Roles" role="button">Roles</a>
            </div>
        </div>
    }
</div>

