@model IEnumerable<ComitNet.Models.Servicios>

@{
    ViewBag.Title = "Servicios";
}

<h2 class="titulo"><i class="	glyphicon glyphicon-camera"></i> Servicios</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<div class="col-md-8">
    @using (Html.BeginForm("Buscar", "servicios_bd", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
    {
        <form class="navbar-form navbar-right ">

            <div class="input-group">

                <div class="form-group">
                    <input name="busqueda_servicios" type="text" class="form-control" placeholder="Buscar...">
                </div>
                <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>

            </div>
        </form>
    }
    <table class="table table-striped">
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contacto)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Ver +", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    @Html.ActionLink("Volver arriba", "Index")
</div>