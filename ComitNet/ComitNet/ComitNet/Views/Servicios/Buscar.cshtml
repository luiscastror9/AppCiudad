
@{
    ViewBag.Title = "";
}

<h2 class="titulo"><i class="glyphicon glyphicon-search"></i> Resultados de busqueda</h2>
<br />
<div class="col-md-8 col-md-offset-2">
    @using (Html.BeginForm("Buscar", "Servicios", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
    {
        <form class="navbar-form navbar-left">
            <div class="input-group">
                <div class="form-group">
                    <input name="busqueda_servicios" type="text" class="form-control" placeholder="Buscar...">
                </div>
                <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </form>
    }
    @if (Model.servicios.Count == 0)
    {
        <h4 class="titulo">No hay resultados disponibles...</h4>
    }
    else
    {
        <table class="table table-bordered table-hover table-striped">
            <tr class="danger">
                <th>
                    @Html.DisplayName("Tipo")
                </th>
                <th>
                    @Html.DisplayName("Nombre")
                </th>
                <th>
                    @Html.DisplayName("Contacto")
                </th>
            </tr>
            @foreach (var itemservicios in Model.servicios)
                {
                <tr>
                    <td>
                        @itemservicios.Tipo
                    </td>
                    <td>
                        @itemservicios.Nombre
                    </td>
                    <td>
                        @itemservicios.Contacto
                    </td>
                </tr>
            }
        </table>
            @Html.ActionLink("<-- Volver al Inicio", "Index")
    }
</div>
