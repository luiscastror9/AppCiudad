<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lamarque - @ViewBag.Title</title>
    @Styles.Render("~/Content/styles-map.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/styles-historia.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Proyecto Ciudad", "Inicio", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            La ciudad
                            <span class="caret"></span>
                        </a>
                       
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Historia", "Historia")</li>
                            <li>@Html.ActionLink("Servicios", "Servicios")</li>
                            <li>@Html.ActionLink("Calendario", "Index", "eventos_bd")</li>
                            <li><a href="~/maps/Index">Mapa</a></li>
                        </ul>

                    </li>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Contacto", "index", "contacto_bd")</li>
                        <li>@Html.ActionLink("Usuarios", "Index", "usuarios_bd")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Registrarse", "Create", "usuarios_bd")<span class="glyphicon glyphicon - user"></span></li>
                        <li><a href="~/usuarios_bd/login"><span class="glyphicon glyphicon-log-in"></span> Iniciar sesion</a></li>
                    </ul>
                    @using (Html.BeginForm("Buscar", "Home", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))

                    {<div class="form-group">
                            <input name="busqueda_txt" type="text" class="form-control" placeholder="Buscar">
                        </div>
                        <button id="busqueda" class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>

                    
                    }</div>
        </div>
    </div>
        <div class="container body-content">
        <br /><br /><br />
        <hr />
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/script-nav.js")
    @RenderSection("scripts", required: false)
</body>
</html>
