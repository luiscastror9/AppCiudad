<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lamarque - @ViewBag.Title</title>
    @Styles.Render("~/Content/styles-map.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/styles-historia.css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="~/Home/Index">Ciudad de Lamarque</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        La ciudad
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="~/Home/Historia">Historia</a></li>
                        <li><a href="~/servicios_bd/Index">Servicios</a></li>
                        <li><a href="~/eventos_bd/Index">Calendario</a></li>
                        <li><a href="~/maps/Index">Mapa</a></li>
                    </ul>
                </li>
                <li><a href="~/contacto_bd/Create">Contacto</a></li>
                <li><a href="~/usuarios_bd/Index">Usuarios</a></li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Buscar">
                </div>
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="~/usuarios_bd/Create"><span class="glyphicon glyphicon-user"></span> Registrarse</a></li>
                <li><a href="~/usuarios_bd/login"><span class="glyphicon glyphicon-log-in"></span> Iniciar sesion</a></li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
            <br /><br /><br />
            <hr />
            @RenderBody()
            <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/script-nav.js")
    @RenderSection("scripts", required: false)
</body>
</html>
