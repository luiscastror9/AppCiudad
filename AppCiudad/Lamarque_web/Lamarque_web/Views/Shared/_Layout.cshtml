<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lamarque - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lamarque", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Historia", "Historia", "Home")</li>
                    <li>@Html.ActionLink("Calendario", "Index", "eventos_bd")</li>
                    <li>@Html.ActionLink("Servicios", "Index", "servicios_bd")</li>
                    <li>@Html.ActionLink("Mapa", "Index", "mapa_bd")</li>
                    <li>@Html.ActionLink("Contacto", "Create", "contacto_bd")</li>                    
                </ul>
                <form class="navbar-form navbar-left" role="search">

                    @using (Html.BeginForm("Buscar", "Home", FormMethod.Post, htmlAttributes: new { @class = "navbar-form navbar-left" }))
                    {
                        <div class="form-group">
                            <input name="busqueda_txt" type="text" class="form-control" placeholder="Buscar">
                        </div>

                            <button id="busqueda" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    }
                </form>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br /><br /><br />
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <!--<p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>-->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/locationpicker.jquery.js")
    @RenderSection("scripts", required: false)
</body>
</html>
